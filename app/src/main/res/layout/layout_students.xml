<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/studenttablelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2">

    <TableRow android:id="@+id/LineTable">// FOR LINING

        <TextView
            android:id="@+id/JustLine"
            android:layout_column="1"
            android:gravity="right"
            android:padding="5dp"
            android:layout_gravity="right"
            android:text="--------------------------"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AnotherLine"
            android:layout_column="1"
            android:gravity="left"
            android:padding="5dp"
            android:text="----------------------------------"
            android:textSize="16dp"
            android:textStyle="bold" />


    </TableRow>

    <TableRow android:id="@+id/Student_StudentID">// Table1

        <TextView
            android:id="@+id/Dis_StudentID"
            android:layout_column="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="Student ID :"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/In_StudentID"
            android:layout_width="73dp"
            android:layout_column="1"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="16dp" />


    </TableRow>

    <TableRow android:id="@+id/Student_StudentName">//Table 2

        <TextView
            android:id="@+id/Dis_StudentName"
            android:layout_column="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="Student Name :
"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/In_StudentName"
            android:layout_column="1"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="16dp" />


    </TableRow>

    <TableRow android:id="@+id/Student_Course">//Table 3

        <TextView
            android:id="@+id/Dis_Course"
            android:layout_column="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="Course :"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/In_Course"
            android:layout_column="1"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="16dp" />


    </TableRow>

    <TableRow android:id="@+id/Student_YearLevel">//Table 4

        <TextView
            android:id="@+id/Dis_YearLevel"
